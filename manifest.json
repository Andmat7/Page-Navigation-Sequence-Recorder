{
  "name": "Record Browser",
  "description": "Record Browser",
  "version": "0.01",
  "icons": { 
		"16": "logo64.png",
		"48": "logo64.png",
		"128": "logo64.png" 
	},
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Record Browser",
    "default_popup": "popup/index.html"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "inPages/DetectElements.js",
        "inPages/playerEvents.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "downloads",
    "activeTab"
  ]
}